@using AudioBook.Models;
@{
    ViewBag.Title = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<table_pages> pages = ViewBag.pages;
    List<table_books> books = ViewBag.books;
    string image_path = "../UploadFile/FrontCover/" + books[0].front_cover;
    int no = 1;
}
<div class="content">
    <div class="container">
        <div class="mt-3">
            <div class="p-4 row flex-nowrap">
                <div class="col-4">
                    <img class="w-100" src="@(image_path)" />
                    <div class="text-center">封面</div>
                </div>
                <div class="col h-50 row">
                    <div class="col">
                        <h4 class="">內頁管理</h4>
                        <p class="">
                            <a>書籍名稱：</a>
                            <a>@books[0].book_title</a>
                        </p>
                        <p class="">
                            <a>書籍說明：</a>
                            <a>@books[0].book_content</a>
                        </p>
                    </div>
                    <div class="col-4">
                        <a class="mx-2 btn btn-outline-success" id="btn-create-page">
                            新增頁面
                        </a>
                        <a class="mx-2 btn btn-outline-danger" id="btn-delete-page">
                            刪除頁面
                        </a>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                @{
                    foreach (table_pages page in pages)
                    {
                        <!--each page-->
                        <div class="col-3 mb-4">
                            <a href="@Url.Action("PageDetail", new { book_id = page.page_id})">
                                <div class="border w-100">
                                    <img class="w-100" src="@page.image_path" />
                                    @*<div class="text-center">@page.page_title</div>*@
                                    <div class="text-center">第 @page.page_num 頁</div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<a id="book_id" hidden>@(ViewBag.bookId)</a>
<script src="~/Scripts/page_list/page_list.js"></script>
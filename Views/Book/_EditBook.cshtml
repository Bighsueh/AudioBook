<div class="modal" tabindex="-1" id="edit_book_modal">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="edit_book_modal_title">編輯書籍</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row form-group">
                        <label for="edit_book_title" class="col-sm-3 col-5 ">書籍名稱</label>
                        <input class="form-control col-sm-8 col-7" id="edit_book_title" type="text" />
                    </div>
                    <div class="row form-group">
                        <label for="edit_book_content" class="col-sm-3 col-5 ">書籍說明</label>
                        <input class="form-control col-sm-8 col-7" id="edit_book_content" type="text" />
                    </div>
                    <div class="row form-group">
                        <label for="edit_upload_image" class="col-sm-3 col-5 ">書籍封面</label>
                        <img src="" id="online_image" />

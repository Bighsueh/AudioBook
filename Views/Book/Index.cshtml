@using AudioBook.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<table_books> books = ViewBag.books;
    int no = 1;
}

<!--
    Content Here
-->
@Html.Partial("_CreateBook")
@Html.Partial("_EditBook")
@(Guid.NewGuid().ToString("D"))
<div class="content">
    <div class="container">
        <div class="mt-3">
            <div class="mx-2 row flex-nowrap">
                <h4 class="col">書籍管理系統</h4>
                <div class="col-4 row">
                    <button type="button" class="col mx-2 btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#create_book_modal">
                        新增書籍
                    </button>
                    <a id="btn-edit-book" class="col mx-2 btn btn-outline-secondary">
                        編輯書籍
                    </a>
                </div>
            </div>
            <div class="mt-3">
                <table class="table">
                    <thead>
                        <tr class="col">
                            <th class="col-2">#</th>
                            <th class="col-3">書籍名稱</th>
                            <th class="col-3">書籍說明</th>
                            <th class="col-6">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (table_books book in books)
                            {
                                <tr>
                                    <td>@(no++)</td>
                                    <td>@book.book_title</td>
                                    <td>@book.book_content</td>
                                    <td class="detail-columns">
                                        @Html.ActionLink("查看詳細資訊", "PageList", new { book_id = book.book_id }, new { @class = "btn btn-outline-dark" })
                                    </td>
                                    <td class="d-none delete-columns">
                                        <a class="book_id" hidden>@book.book_id</a>
                                        <a class="btn btn-outline-secondary btn-edit-book" data-bs-toggle="modal" data-bs-target="#edit_book_modal">
                                            編輯書籍
                                        </a>
                                        <a class="btn btn-outline-danger btn-delete-book">
                                            刪除書籍
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!--book_list.js-->
<script src="~/Scripts/book/book_list.js"></script>


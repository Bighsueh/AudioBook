@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    
}
<div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <h3 class="text-center mb-4">有聲書線上互動系統-登入介面</h3>
                    <form id="login-form" action="/Login/LoginCheck" method="POST" class="login-form">
                        <div class="form-group">
                            <label for="account"><i class="fas fa-user"></i> 使用者帳號</label>
                            <br>
                            <input id="account" name="account" type="account"
                                                               class="form-control rounded-left"
                                                               placeholder="帳號" required>
                        </div>
                        <div class="form-group">
                            <label for="password"><i class="fas fa-key"></i> 使用者帳號密碼</label>
                            <br>
                            <input id="password" name="password" type="password"
                                   class="form-control rounded-left"
                                   placeholder="密碼" required>
                        </div>
                        <div class="form-group">
                            <button id="btn_submit" type="submit"
                                    class="form-control btn btn-secondary rounded submit px-3">登入
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
@using AudioBook.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string group_name = ViewBag.groupName;
    List<list_users> list_users = ViewBag.listUsers;
    int no = 1;
}

<!--
Content Here
-->
@*Html.Partial("_CreateBook")
@Html.Partial("_EditBook")*@
<div class="content">
    <div class="container">
        <div class="mt-3">
            <div class="mx-2 row flex-nowrap">
                <h4 class="col">使用者管理系統</h4>
                <h4 class="col">群組名稱-@(group_name)</h4>
                <div class="col-4 row">
                    <button type="button" class="col mx-2 btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#create_book_modal">
                        新增使用者
                    </button>
                    <a id="btn-edit-book" class="col mx-2 btn btn-outline-secondary">
                        編輯/刪除使用者
                    </a>
                </div>
            </div>
            <div class="mt-3">
                <table class="table">
                    <thead>
                    <tr class="col">
                        <th class="col-2">#</th>
                        <th class="col-3">使用者名稱</th>
                        <th class="col-3">使用者帳號</th>
                        <th class="col-6">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (list_users row in list_users)
                        {
                            <tr>
                                <td>@(no++)</td>
                                <td>@row.user_name</td>
                                <td>@row.user_account</td>
                                <td class="detail-columns">
                                    <a class="user_id" hidden></a>
                                    <a class="btn btn-outline-secondary btn-edit-book" data-bs-toggle="modal" data-bs-target="#edit_book_modal">
                                        編輯使用者
                                    </a>
                                </td>
                                <td class="d-none delete-columns">
                                    <a class="user_id" hidden></a>
                                    <a class="btn btn-outline-danger btn-delete-book">
                                        刪除使用者
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!--book_list.js-->
<script src="~/Scripts/book/book_list.js"></script>